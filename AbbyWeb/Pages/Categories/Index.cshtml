@page
@model AbbyWeb.Pages.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Categort List</h2>
       </div>
    </div>
    <div class="col-6">
        <a asp-page="create" class="btn btn-primary">Create new Category</a>
    </div>


<br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach(var obj in Model.Categories)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DiplayOrder</td>
                 </tr>                
            }            
    </tbody>
</table>
</div>
