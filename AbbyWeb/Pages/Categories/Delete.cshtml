@page
@model AbbyWeb.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" disabled/>
        </div>
        <div class="mb-3">         
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:100px">Delete</button>
        <a asp-page="index" class="btn btn-secondary">Back</a>
    </div>
</form>
